<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.arteco.controllers.GestionEvenement.carteReservation"
      prefHeight="225.0" prefWidth="412.0" spacing="10">

   <ImageView fx:id="image" fitHeight="185.0" fitWidth="127.0" pickOnBounds="true" preserveRatio="true">
      <!-- Remplacez cette image par votre image de carte -->
   </ImageView>

   <VBox spacing="5">
      <Text fx:id="text" text="Reservation" textAlignment="CENTER" wrappingWidth="200">
         <font>
            <Font name="Arial" size="24.0" />
         </font>
      </Text>

      <Separator prefHeight="2.0" prefWidth="200" />

      <VBox spacing="5">
         <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Nom de l'événement:" />
         <Label fx:id="IdEventLabel" style="-fx-font-size: 14px;" />

         <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Date de Réservation de l'événement:" />
         <Label fx:id="DateReservationLabel" style="-fx-font-size: 14px;" />

         <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Nombre de Personnes:" />
         <Label fx:id="NbrPersonnesLabel" style="-fx-font-size: 14px;" />

         <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Etat de la Réservation:" />
         <Label fx:id="EtatReservationLabel" style="-fx-font-size: 14px;" />

         <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Email du Client" />
         <Label fx:id="EmailclientLabel" style="-fx-font-size: 14px;" />
      </VBox>
   </VBox>
</HBox>

